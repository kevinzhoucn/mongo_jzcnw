= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :corp_email
    = f.text_field :corp_email
  .field
    = f.label :corp_province
    = f.text_field :corp_province
  .field
    = f.label :corp_city
    = f.text_field :corp_city
  .field
    = f.label :corp_address
    = f.text_field :corp_address
  .actions
    = f.submit 'Save'
