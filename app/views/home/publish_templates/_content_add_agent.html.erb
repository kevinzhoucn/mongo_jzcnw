<!--内容开始-->
<div class="center"><img src="<%= root_url %>images/release/bt_3.jpg" width="1010" height="78" /></div>
<div id="ny3_dh">
  当前位置：
  <%= render_breadcrumbs :separator => ' / ' %>
</div>
<div class="center">
  <div id="member">
  <div class="left"><img src="<%= root_url %>images/tm.png" width="963" height="36" /></div>
  <div class="left">
    <%= form_for @record, :url => home_records_path do |f| %>
      <% if @record.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= "#{@record.errors.count}个错误:" %>
          </h2>
          <ul>
            <% @record.errors.full_messages.each do |msg| %>
              <li style="float:none">
                <%= msg %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <table width="964" height="323" border="0" cellpadding="0" cellspacing="0">
        <input type="hidden" name="record[segment_id]" value="<%= seg_id %>" >
        <input type="hidden" name="record[category_id]" value="<%= cat_id %>" >
        <% if !@job_type.blank? %>
          <input type="hidden" name="record[job_type]" value="<%= @job_type %>" >
        <% end %>
        <tr>
          <td width="125" height="45" align="right" class="txt_4"><span class="txt_2">*</span> 标题：</td>
          <td width="566" height="45">
            <input name="record[title]" type="text" class="fb3_sr" />            
          </td>
          <td width="273" rowspan="5"><input name="" type="image" src="<%= root_url %>images/release/fabu.jpg" width="153" height="41" /></td>
        </tr>
        <tr>
          <td height="45" align="right" class="txt_4"><span class="txt_2">*</span> 公司所在地：</td>
          <td height="45">
            <div class="city-group">
              <select name="record[locate_province]" class="txt_1 city-select">
                  <option value="无">请选择省份</option>
                  <%= options_for_select(ChinaCity.list) %>
              </select>      
              <select name="record[locate_city]" class="txt_1 city-select">
                <option value="">请选择城市</option>
              </select>
              <select name="" class="txt_1 city-select">
                <option value="">请选择区县</option>
              </select>
            </div>
          </td>
        </tr>
        <tr>
          <td height="45" align="right" class="txt_4"><span class="txt_2">*</span> 注册资金：</td>
          <td height="45" class="txt_4">
            <input name="record[company_reg_price]" type="text" class="fb3_sr" />
          </td>
        </tr>
        <tr>
          <td height="45" align="right" class="txt_4">公司成立时间：</td>
          <td height="45" class="txt_4">
            <input name="record[company_start_date]" type="text" class="fb3_sr" />
          </td>
        </tr>
        <tr>
          <td align="right" class="txt_4"><span class="txt_2">*</span> 详细说明：</td>
          <td><textarea name="record[details]" class="fb3_sr2"></textarea></td>
          </tr>
      </table>
    <% end %>  
  </div>
  </div>
</div>
<div class="center"><img src="<%= root_url %>images/release/fgx_r2_c1.jpg" width="1010" height="25" /></div>