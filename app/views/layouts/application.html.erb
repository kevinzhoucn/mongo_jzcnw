<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <%= render_page_title %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <link href="/style_jianzhu/css.css " rel="stylesheet" type="text/css" />  
  <%= yield :styles %>
  <!--脚本区域-->
  <script type="text/javaScript">
    var myDivId1, divId2, divId3, divId4, divId5;
    function showDiv(myDivId1, divId2, divId3, divId4, divId5)
    {
      document.getElementById( myDivId1 ).style.display  = '';
      document.getElementById( divId2 ).style.display   = 'none';
      document.getElementById( divId3 ).style.display   = 'none';
      document.getElementById( divId4 ).style.display   = 'none';
      document.getElementById( divId5 ).style.display   = 'none';
    }
  </script>
  <%= csrf_meta_tags %>
</head>

<body>
  <!--头部功能栏-->
  <%= render :partial => 'common/theme_jianzhu/top_bar' %>

  <!--LOGO-->
  <!--导航-->
  <% if @home_index_bar %>
    <%= render :partial => 'common/theme_jianzhu/top_nav_home_index' %>
  <% else %>
    <%= render :partial => 'common/theme_jianzhu/top_nav' %>
  <% end %>

  <%= yield %>
  
  <%= render partial: 'common/theme_jianzhu/column_foot' %>

  <%= javascript_include_tag "application" %>
</body>
</html>