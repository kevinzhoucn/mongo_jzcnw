<div class="zs_nr1_1">
  <div class="ny_bt">
    <%= @resume.name %>
    <%= @resume.segment.title %>
    简历</div>
    <div class="ny_day">
      发布时间：<%= @resume.created_at.strftime('%Y-%m-%d').to_s %><br>
      游览 <span class="txt_4"><%= @resume.hits %>次</span>
    </div>
  </div>

  <div class="zs_nr1_1">
      <div class="ny_dbk" style="height:120px">
        <div class="ny_l_k1">
          <table width="710" height="100px" border="0" cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <td width="87" align="right" class="txt_6">更新时间：</td>
                <td width="273" class="txt_4a">
                  <%= @resume.updated_at.strftime('%Y-%m-%d').to_s %>
                </td>
              </tr>
              <tr>
                <td align="right" class="txt_6">姓名：</td>
                <td class="txt_2"><%= @resume.name %></td>
                <td align="right" class="txt_6">性别：</td>
                <td><a href="#" class="lk_7"><%= @resume.sex %></a></td>
              </tr>
              <tr>
                <td align="right" class="txt_6">出生年份：</td>
                <td class="txt_2"><%= @resume.birth_year %>年</td>
                <td align="right" class="txt_6">学历：</td>
                <td class="txt_2"><%= @resume.edu_level %></td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>

    <div class="ny_dbk">
      <div class="ny_l_k1">
        <table width="710" height="200px" border="0" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td width="87" align="right" class="txt_6">证书类型：</td>
              <td width="273" class="txt_4a">
                <%= @resume.segment.title %>
              </td>
              <td align="right" class="txt_6">证书专业：</td>
              <td class="txt_2"><%= @resume.category.title %></td>
            </tr>
            <tr>
              <td align="right" class="txt_6">注册情况：</td>
              <td class="txt_2"><%= @resume.register_status %></td>
              <td align="right" class="txt_6">证书所在地：</td>
              <td><a href="" class="lk_7"><%= ChinaCity.get(@resume.work_province) %></a></td>
            </tr>
            <tr>
              <td align="right" class="txt_6">薪资水平：</td>
              <td class="txt_2"><%= @resume.price_month %>年</td>
            </tr>
            <tr height="80px">
              <td align="right" class="txt_6">详细说明：</td>
              <td class="txt_2"><%= @resume.person_summary %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

